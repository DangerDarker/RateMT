<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="2dp"
    app:cardCornerRadius="4dp"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardBackgroundColor="@color/currency_bkg">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60sp">

        <TextView
            android:id="@+id/country_cname"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:gravity="center"
            android:textSize="25sp"
            android:text="人民币"
            android:textColor="#000000"/>
        <TextView
            android:id="@+id/country_ename"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_toRightOf="@+id/country_cname"
            android:textSize="25sp"
            android:text="RMB"
            />
        <TextView
            android:id="@+id/money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10000"
            android:textSize="20sp"
            android:layout_alignParentRight="true"/>
        <TextView
            android:id="@+id/rate_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/money"
            android:textSize="15sp"
            android:text="1.222"
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/rate_money"
            android:textSize="10sp"
            android:text="2011-01-11"
            />

    </RelativeLayout>

</android.support.v7.widget.CardView>
